<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.bppir.pishtazan">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:name=".views.application.PishtazanApplication"
        android:allowBackup="true"
        android:icon="@drawable/pishtaz_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pishtaz_logo"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".background.NotificationReceiver">
            <intent-filter>
                <action android:name="ML_Ignore"/>
                <action android:name="ML_Calling"/>
                <action android:name="ML_Later"/>
            </intent-filter>
        </receiver>


        <service android:name=".background.ServiceNotification"/>

        <receiver android:name=".background.ReceiverLunchAppInBackground"
            android:enabled="true"
            android:process="ir.bppir.pishtazan"
            >
            <intent-filter >
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="ir.bppir.Lunch" />
            </intent-filter>
        </receiver>

        <receiver android:name=".background.ReceiverJobInBackground"
            android:enabled="true"
            android:process="ir.bppir.pishtazan"
            >
            <intent-filter>
                <action android:name="accept"/>
                <action android:name="disapprove"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>