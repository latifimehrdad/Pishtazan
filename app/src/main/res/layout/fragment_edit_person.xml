<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="editPerson"
            type="ir.bppir.pishtazan.viewmodels.fragments.VM_EditPerson" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/CircleImageViewProfile"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        app:civ_border_width="@dimen/_1sdp"
                        app:civ_border_color="@color/ML_AdapterPerson"
                        android:src="@drawable/ic_baseline_account_circle"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/EditTextName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_27sdp"
                        android:background="@drawable/dw_edit_back"
                        android:inputType="textPersonName"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_12sdp"
                        android:hint="@string/Name_LastName"
                        android:maxLength="30"
                        />

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/dw_icon_background"
                        android:src="@drawable/ic_baseline_person"
                        android:tint="@color/ML_Harmony" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/EditTextPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_27sdp"
                        android:background="@drawable/dw_edit_back"
                        android:inputType="phone"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_12sdp"
                        android:hint="@string/MobileNumber"
                        android:maxLength="11"
                        />

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/dw_icon_background"
                        android:src="@drawable/ic_baseline_phone_android"
                        android:tint="@color/ML_Harmony" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/EditTextNationalCode"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_27sdp"
                        android:background="@drawable/dw_edit_back"
                        android:inputType="phone"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_12sdp"
                        android:hint="@string/NationalCode"
                        android:maxLength="11"
                        />

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/dw_icon_background"
                        android:src="@drawable/ic_baseline_recent_actors"
                        android:tint="@color/ML_Harmony" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/EditTextAddress"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/_40sdp"
                        android:background="@drawable/dw_edit_back"
                        android:inputType="textPostalAddress"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_12sdp"
                        android:hint="@string/Address"
                        android:maxLines="3"
                        />

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/dw_icon_background"
                        android:src="@drawable/ic_baseline_not_listed_location"
                        android:tint="@color/ML_Harmony" />

                </LinearLayout>

                <include layout="@layout/layout_degree_person"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        app:civ_border_width="@dimen/_1sdp"
                        app:civ_border_color="@color/ML_AdapterPerson"
                        android:src="@drawable/google_maps_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                        <LinearLayout
                            android:id="@+id/LinearLayoutSave"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/dw_back_question_left"
                            >

                            <ImageView
                                android:id="@+id/ImageViewSend"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:src="@drawable/ic_baseline_how_to_reg"
                                android:tint="@color/ML_White"
                                />

                            <com.cunoraz.gifview.library.GifView
                                android:id="@+id/GifViewSend"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:visibility="gone"
                                custom:gif="@drawable/loading3" />

                            <TextView
                                android:id="@+id/TextViewSend"
                                fontPath="fonts/iransans_web_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="52dp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:maxLines="2"
                                android:text="@string/Save"
                                android:textColor="@color/ML_White"
                                android:textSize="@dimen/_9sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayoutCancel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/dw_back_question_right"
                            >

                            <TextView
                                fontPath="fonts/iransans_web_medium.ttf"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="52dp"
                                android:layout_marginRight="@dimen/_2sdp"
                                android:gravity="center"
                                android:paddingLeft="@dimen/_5sdp"
                                android:paddingRight="@dimen/_5sdp"
                                android:maxLines="2"
                                android:text="@string/Cancel"
                                android:textColor="@color/ML_White"
                                android:textSize="@dimen/_9sdp" />

                            <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_marginRight="@dimen/_8sdp"
                                android:src="@drawable/ic_baseline_cancel"
                                android:tint="@color/ML_White"
                                />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>


    </LinearLayout>



</layout>
