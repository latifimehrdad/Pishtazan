<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="quiz"
            type="ir.bppir.pishtazan.viewmodels.fragments.VM_Quiz" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/dw_back_home_learn"
            android:padding="@dimen/_4sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo_pishtazan_small"
                app:civ_border_width="@dimen/_2sdp"
                app:civ_border_color="@color/ML_Harmony"
                android:layout_centerVertical="true"
                app:SetPersonImageReport=""
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dw_back_circle_play"
                android:padding="@dimen/_22sdp"
                android:src="@drawable/svg_video_player2"
                android:tint="@color/ML_White"/>


        </RelativeLayout>

    </LinearLayout>

</layout>