<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="home"
            type="ir.bppir.pishtazan.viewmodels.fragments.VM_Home" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/LinearLayoutTutorial"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/dw_back_home_learn"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/svg_video_tutorials"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_11sdp"
                    fontPath="fonts/iransans_web_medium.ttf"
                    android:text="@string/Tutorial"
                    android:layout_marginTop="@dimen/_3sdp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/LinearLayoutColleague"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="bottom|center_horizontal"
                android:background="@drawable/dw_home_circle_top"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/ic_baseline_people"
                    android:tint="@color/ML_Harmony"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ML_Harmony"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/Colleagues"
                    fontPath="fonts/iransans_web_medium.ttf"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutCustomer"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/dw_home_circle_bottom"
                android:gravity="top|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/ic_baseline_how_to_reg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:tint="@color/ML_Harmony"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ML_Harmony"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="@string/Customer"
                    fontPath="fonts/iransans_web_medium.ttf"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutReports"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/dw_back_home_learn"
                android:padding="@dimen/_7sdp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/svg_to_do_list"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_11sdp"
                    fontPath="fonts/iransans_web_medium.ttf"
                    android:text="@string/Reports"
                    android:layout_marginTop="@dimen/_3sdp"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</layout>
