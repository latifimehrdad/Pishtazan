<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@drawable/dw_back_bottom_connection"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/LinearLayoutNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_2sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:civ_border_width="@dimen/_2sdp"
            app:civ_border_color="@color/ML_Red"
            android:src="@drawable/normal_icon"/>

        <TextView
            fontPath="fonts/iransans_web_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ML_HarmonyDark"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/DegreeNormal"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutPeach"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:civ_border_width="@dimen/_2sdp"
            app:civ_border_color="@color/ML_Red"
            android:src="@drawable/peach_icon"/>

        <TextView
            fontPath="fonts/iransans_web_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ML_HarmonyDark"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/DegreePeach"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutGiant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/_2sdp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:civ_border_width="@dimen/_2sdp"
            app:civ_border_color="@color/ML_Red"
            android:src="@drawable/giant_icon"/>

        <TextView
            fontPath="fonts/iransans_web_medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ML_HarmonyDark"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/DegreeGiant"/>

    </LinearLayout>

</LinearLayout>