<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/LinearLayoutCustomerReport"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/back_circle_accent_bleft_tleft"
        >

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:src="@drawable/ic_baseline_multiline_chart"
            android:tint="@color/ML_Harmony"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/ML_Harmony"
            android:textSize="@dimen/_10sdp"
            android:maxLines="2"
            fontPath="font/iransans_web_medium.ttf"
            android:gravity="center"
            android:text="@string/CustomerReport"
            android:layout_marginRight="@dimen/_2sdp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutPartnerReport"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/back_circle_accent_bright_tright"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/ML_Harmony"
            android:textSize="@dimen/_10sdp"
            android:maxLines="2"
            fontPath="font/iransans_web_medium.ttf"
            android:gravity="center"
            android:text="@string/PartnerReport"
            android:layout_marginLeft="@dimen/_2sdp"
            />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:tint="@color/ML_Harmony"
            android:src="@drawable/ic_baseline_bar_chart"
            />

    </LinearLayout>


</LinearLayout>