<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/LinearLayoutStatisticalReport"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/back_circle_accent_bleft_tleft"
        >

        <ImageView
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:src="@drawable/svg_goal"
            android:tint="@color/ML_Harmony"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/ML_Harmony"
            android:textSize="@dimen/_10sdp"
            android:maxLines="2"
            fontPath="fonts/iransans_web_medium.ttf"
            android:gravity="center"
            android:text="@string/StatisticalReport"
            android:layout_marginRight="@dimen/_2sdp"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutAnalyticalReport"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/back_circle_accent_bright_tright"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/ML_Harmony"
            android:textSize="@dimen/_10sdp"
            android:maxLines="2"
            fontPath="fonts/iransans_web_medium.ttf"
            android:gravity="center"
            android:text="@string/AnalyticalReport"
            android:layout_marginLeft="@dimen/_2sdp"
            />

        <ImageView
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:tint="@color/ML_Harmony"
            android:src="@drawable/svg_files_and_folders"
            />

    </LinearLayout>


</LinearLayout>