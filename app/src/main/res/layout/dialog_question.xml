<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/ML_White"
    android:padding="@dimen/_10sdp"
    android:gravity="center">


    <TextView
        android:id="@+id/TextViewQuestionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ML_Black"
        android:textSize="@dimen/_11sdp"
        android:gravity="center"
        fontPath="fonts/iransans_web_medium.ttf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <LinearLayout
            android:id="@+id/LinearLayoutYes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/dw_back_question_left"
            >

            <com.cunoraz.gifview.library.GifView
                android:id="@+id/GifViewQuestion"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:visibility="gone"
                custom:gif="@drawable/loading3" />

            <ImageView
                android:id="@+id/ImageViewQuestion"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:src="@drawable/ic_baseline_check_circle"
                android:tint="@color/ML_White"
                />

            <TextView
                fontPath="fonts/iransans_web_medium.ttf"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:layout_marginRight="@dimen/_2sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:maxLines="2"
                android:text="@string/Yes"
                android:textColor="@color/ML_White"
                android:textSize="@dimen/_9sdp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/dw_back_question_right"
            >

            <TextView
                fontPath="fonts/iransans_web_medium.ttf"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="52dp"
                android:layout_marginRight="@dimen/_2sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:maxLines="2"
                android:text="@string/Cancel"
                android:textColor="@color/ML_White"
                android:textSize="@dimen/_9sdp" />

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_cancel"
                android:tint="@color/ML_White"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>