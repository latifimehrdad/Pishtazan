<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="question"
            type="ir.bppir.pishtazan.models.MD_Question" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/dw_back_bottom_action">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/ML_Black"
                android:textSize="@dimen/_12sdp"
                android:gravity="right"
                android:text="@{question.question}"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:layoutDirection="rtl">

                <RadioButton
                    android:id="@+id/RadioButtonA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ML_Black"
                    android:textSize="@dimen/_11sdp"
                    android:theme="@style/mlCheck"
                    app:TextRadioButton="@{question.answerA}"
                    app:userAnswerRadioButton="@{question.userAnswer}"
                    app:radioButtonTag="@{1}"
                    />

                <RadioButton
                    android:id="@+id/RadioButtonB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ML_Black"
                    android:textSize="@dimen/_11sdp"
                    android:theme="@style/mlCheck"
                    android:layout_marginTop="@dimen/_7sdp"
                    app:TextRadioButton="@{question.answerB}"
                    app:userAnswerRadioButton="@{question.userAnswer}"
                    app:radioButtonTag="@{2}"
                    />

                <RadioButton
                    android:id="@+id/RadioButtonC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ML_Black"
                    android:textSize="@dimen/_11sdp"
                    android:theme="@style/mlCheck"
                    android:layout_marginTop="@dimen/_7sdp"
                    app:TextRadioButton="@{question.answerC}"
                    app:userAnswerRadioButton="@{question.userAnswer}"
                    app:radioButtonTag="@{3}"
                    />

                <RadioButton
                    android:id="@+id/RadioButtonD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ML_Black"
                    android:textSize="@dimen/_11sdp"
                    android:theme="@style/mlCheck"
                    android:layout_marginTop="@dimen/_7sdp"
                    app:TextRadioButton="@{question.answerD}"
                    app:userAnswerRadioButton="@{question.userAnswer}"
                    app:radioButtonTag="@{4}"
                    />

            </RadioGroup>

        </LinearLayout>




    </LinearLayout>

</layout>
